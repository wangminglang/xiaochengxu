.input{
    width: 90%;
    height: 100rpx;
    margin-left: 5%;
    margin-top: 50rpx;
    background-color: #eaeaea;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.placeholderC{
    font-size: 30rpx;
}

.button{
    width: 90%;
    margin-left: 5%;
    margin-top: 80rpx;
    background-color: #56d1a8;
    color: white;
}

.button-hover{
    opacity: 0.7;
}
.register{
    width: 45%;
    margin-left: 5%;
    margin-top: 50rpx;
    float: left;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 35rpx;
    color: #56d1a8;
    text-align: center;
}
.forget{
    width: 45%;
    margin-top: 50rpx;
    float: left;
    height: 70rpx;
